<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wollf.togather.AddEvent"
    tools:showIn="@layout/activity_add_event">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group name" />

        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/event_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and time" />

        <EditText
            android:id="@+id/fromDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="datetime" />

        <EditText
            android:id="@+id/toDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="datetime" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose group" />

        <RadioGroup
            android:id="@+id/groupsRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="353dp"
        android:layout_height="472dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="19dp">

        <Button
            android:id="@+id/fromBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="138dp"
            android:text="Pick date"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="153dp" />

        <Button
            android:id="@+id/toBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fromBtn"
            android:layout_below="@+id/fromBtn"
            android:text="Pick date"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="201dp" />

        <Button
            android:id="@+id/addEventBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Add event!"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="447dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
